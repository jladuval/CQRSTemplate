            <!-- Content -->
            <div class="container">
                <ul data-bind = "template: { name: 'tagTemplate', foreach: Tags }">
                </ul>
                <div class="row">
                    <div class="span12">

                        <!-- Session Header -->
                        <h3><a href="#">Exit</a> Cannibals 012</h3>
                        <h4>Edit the boards sections and questions</h4>
                        <p>Click and drag to reorder items. All times/dates are shown in your own timezone (user timezone)</p>
                        <span class="session-type">Vision.Community</span>
                    </div>
                </div>


                <div class="row">

                    <!-- Left Section and Activity Sort Order -->
                    <div class="span4">

                        <form>
                            <!-- Section Wrapper -->
                            <ul id="sortable-parent1" class="connectedSortableParents section-wrapper">

                                <!-- Section Item -->
                                <li class="section-item">
                                    <span class="section-title">Welcome</span>
                                    <span class="section-subtitle">17/5/2012 10am – 18/5/2012 11.30am</span>

                                    <!-- Activity Wrapper -->
                                    <ul id="sortable-child1" class="connectedSortableChildren activity-wrapper clearfix">
                                        <li class="activity-item first">Hello there &ndash; who are you?</li>
                                        <li class="activity-item last">Who is your daddy?</li>
                                        <!-- Add new activity -->
                                        <li class="activity-item new">
                                            <label class="control-label" for="welcome-newActivity"><span class="visuallyhidden">New Activity</span></label>
                                            <input type="text" id="welcome-newActivity" placeholder="New Activity">
                                            <button type="submit" class="btn btn-red btn-add-small"><span class="visuallyhidden">Add activity</span></button>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Section Item -->
                                <li class="section-item">
                                    <span class="section-title">Day One</span>
                                    <span class="section-subtitle">18/5/2012 11.30am – 19/5/2012 12.00am</span>

                                    <!-- Activity Wrapper -->
                                    <ul id="sortable-child2" class="connectedSortableChildren activity-wrapper clearfix">
                                        <li class="activity-item first">What did you have for breakfast?</li>
                                        <li class="activity-item">What did you have for lunch?</li>
                                        <li class="activity-item last">What did you have for dinner?</li>

                                        <!-- Add new activity -->
                                        <li class="activity-item new">
                                            <label class="control-label" for="day-one-newActivity"><span class="visuallyhidden">New Activity</span></label>
                                            <input type="text" id="day-one-newActivity" placeholder="New Activity">
                                            <button type="submit" class="btn btn-red btn-add-small"><span class="visuallyhidden">Add activity</span></button>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Section Item New -->
                                <li class="section-item new clearfix">
                                    <span class="section-title">Add another section</span>
                                    <label class="control-label" for="new-section"><span class="visuallyhidden">New Section</span></label>
                                    <input type="text" id="new-section" placeholder="New Section">
                                    <button type="submit" class="btn btn-red btn-add-medium"><span class="visuallyhidden">Add section</span></button>
                                </li>
                            </ul>
                        </form>
                    </div>

                    <!-- Right Section and Activity Content -->
                    <div class="span8">
                        <form class="form-horizontal form-edit-board">
                            <fieldset>
                                <legend class="heading-two">Editing Section 1</legend>

                                <!-- Input Section Title -->
                                <div class="control-group">
                                    <label class="control-label" for="sectionTitle">Section Title:</label>
                                    <div class="controls">
                                        <input type="text" id="sectionTitle" placeholder="Section Title" value="Day One">
                                    </div>
                                </div>

                                <!-- Input Response Visibility -->
                                <div class="control-group">
                                    <label class="control-label" for="responseVisibility">Response visibility:</label>
                                    <div class="controls">
                                        <select id="responseVisibility">
                                            <option selected>Respondent required to answer before seeing other responses</option>
                                            <option>Respondent required to eat spaghetti</option>
                                            <option>Respondent required to smell a shoe</option>
                                            <option>Moderator required to make respondent a sandwich</option>
                                            <option>Observer, moderator and respondent required to have a tea party</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Section header content -->
                                <div class="control-group">
                                    <label class="control-label heading-two" for="sectionHeaderContent">Section header content:</label>
                                    <div class="controls">
                                        <textarea id="sectionHeaderContent" rows="3" placeholder="Jquery WYSIWYG"></textarea>
                                    </div>
                                </div>

                                <!-- Hide / Show advanced options -->
                                <div class="accordion accordion-panels" id="accordion3">

                                    <!-- Panel Item -->
                                    <div class="accordion-group">
                                        <div class="accordion-heading">
                                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                                                Show advanced options
                                            </a>
                                        </div>
                                        <div id="collapseOne" class="accordion-body collapse in">
                                            <div class="accordion-inner">

                                                <!-- Panel Content -->
                                                <p>Activities or questions in this section must be answered in sequence</p>
                                                <p>Dependent on completion of a previous section</p>

                                                <!-- Publish Date -->
                                                <div class="control-group">
                                                    <label class="control-label" for="publishDate">Publish date:</label>
                                                    <div class="controls">
                                                        <input type="text" id="publishDate" placeholder="Publish date">
                                                    </div>
                                                    <!-- date picker here -->
                                                    <!-- reminder widget here -->
                                                </div>

                                                <!-- Publish Date Option -->
                                                <div class="control-group">
                                                    <label class="checkbox">
                                                        Use Bulletin board start date
                                                        <input type="checkbox">
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Manage Section -->
                                <ul class="manage-section">
                                    <li class="first"><a href="#">Duplicate Section</a></li>
                                    <li class="last"><a href="#">Delete Section</a></li>
                                </ul>

                                <!-- Save or Cancel -->
                                <button class="btn btn-red">Cancel</button>
                                <button class="btn btn-red">Save Section Header</button>
                            </fieldset>
                        </form>
                    </div>
